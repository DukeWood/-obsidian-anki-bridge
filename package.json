{
  "name": "obsidian-anki-bridge",
  "version": "0.1.0",
  "description": "MCP server for syncing Obsidian flashcards to Anki via AnkiConnect",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "obsidian-anki-bridge": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "obsidian",
    "anki",
    "flashcards",
    "spaced-repetition"
  ],
  "author": "DukeWood",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DukeWood/-obsidian-anki-bridge.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "yanki-connect": "^3.2.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
